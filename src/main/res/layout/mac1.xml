<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"

    android:background="@drawable/macbg">

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="16dp"
        android:background="@android:color/transparent"
        android:clickable="true"
        android:contentDescription="@string/Back"
        android:elevation="4dp"
        android:focusable="true"
        android:padding="17dp"
        android:src="@drawable/ic_back" />


    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:padding="16dp"
            android:weightSum="7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:src="@drawable/macmaca"
                android:contentDescription="@string/firstpic"
                />


            <TextView
                android:id="@+id/product_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="MacBook Air M1 (Space Gray, 256 GB) (8 GB RAM)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="16dp" />


            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                android:text="â‚¹92,990"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/specs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Highlights"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="#000000" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apple M1 chip with 8-core CPU/n13.3-inch Retina display/nUp to 18 hours battery life /nFanless design for silent operation"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:textSize="20sp"
                android:id="@+id/descr"
                android:layout_marginTop="15sp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:text="Offers"
                android:layout_marginTop="15sp"
                android:textStyle="bold"
                android:id="@+id/off_text"
                android:textSize="20sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:text="Get 5% back with Amazon Pay ICICI Bank credit card for Prime members. 3% back for others. Not applicable on EMI orders and Amazon business transactions."/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:weightSum="8"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/product_rating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:layout_weight="7"
                    android:numStars="5"
                    android:rating="4.5"
                    android:progressTint="@color/dark_brown"
                    android:stepSize="0.5" />

                <TextView
                    android:id="@+id/rating_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:text="4.5/5"
                    android:layout_weight="2"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="30dp"
                android:weightSum="4">

                <Button
                    android:id="@+id/addToCartButton"

                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginEnd="4dp"
                    android:layout_weight="2"
                    android:text="@string/add_to_cart"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="12dp"

                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/item_background1"

                    android:backgroundTint="@color/brown"
                    />

                <Button
                    android:id="@+id/buyNowButton"

                    style="?android:attr/buttonBarButtonStyle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="4dp"
                    android:layout_weight="2"
                    android:text="@string/buy_now"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:padding="12dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:background="@drawable/item_background1"
                    android:backgroundTint="@color/brown" />
            </LinearLayout>



        </LinearLayout>
    </ScrollView>

</RelativeLayout>